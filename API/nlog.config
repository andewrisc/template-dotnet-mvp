<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="internal-nlog.txt">

  <targets>
    <target name="logfile" xsi:type="File"
            fileName="logs/${shortdate}.log"
            layout="${longdate}|${event-properties:item=LogId}|${level:uppercase=true:padding=-5}|${logger}|${aspnet-request-method:padding=-6} ${aspnet-request-url:IncludeQueryString=true}|${message} ${exception:format=tostring}"
            archiveEvery="Day"
            archiveFileName="logs/archive/log.{#}.txt"
            maxArchiveFiles="100" />

    <target name="logconsole" xsi:type="Console"
            layout="${longdate}|${event-properties:item=LogId}|${level:uppercase=true:padding=-5}|${message} ${exception:format=tostring}" />
  </targets>

  <rules>
    <logger name="Microsoft.*" maxlevel="Info" final="true" />
    <logger name="*" minlevel="Debug" writeTo="logfile" />
    <logger name="*" minlevel="Info" writeTo="logconsole" />
  </rules>
</nlog>